---
import Footer from "../components/footer.astro";
import Header from "../components/header.astro";
import "../styles/global.css";
const { title } = Astro.props;
---

<html lang="es">
   <head>
    <!-- META -->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="Entrena, cria y evoluciona a tu compañero Digimon." />
    <meta name="keywords" content="Digimon, Digital Monsters, juego, captura, evolución, Dock" /> 
    <meta name="robots" content="index, follow" />

    <!-- Favicon -->
    <link rel="icon" href="/public/favicon.ico" type="image/x-icon" />

    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>

    <script type="module" src="/src/scripts/initAOS.js"></script>
  </head>

  <body class="min-w-xs max-w-7xl mx-auto text-white bg-[#0F0F0F]">
    <Header />
    <main class="w-full min-h-svh">
      <slot />
    </main>
    <Footer />
  </body>
</html>
